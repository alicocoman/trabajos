@model IEnumerable<MVC.Models.ModeloCompras>

@{
    ViewBag.Title = "FindByComprador";
}

<h2>Compras del comprador</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreVacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NroCompradorMSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantDosisCompradas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitVacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCompra)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreVacuna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NroCompradorMSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantDosisCompradas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioUnitVacuna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCompra)
        </td>
        
    </tr>
}

</table>
<table class="table">
    <tr>
        <th>
            Compras restantes
        </th>
        <th>
           Dinero autorizado para compras
        </th>
        <th>
           Saldo disponible
        </th>
        

    </tr>

   
        <tr>
            <td>
                @ViewBag.CompraRes
            </td>
            <td>
                @ViewBag.DineroAuto
            </td>
            <td>
                @ViewBag.Saldo
            </td>
           

        </tr>
   

</table>
