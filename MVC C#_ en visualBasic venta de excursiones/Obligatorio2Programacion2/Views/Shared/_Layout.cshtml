<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if ((string)Session["logueadoRol"] == "Operador")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Agencia de viajes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Log Out", "LogOut", "Home")</li>
                        <li>@Html.ActionLink("Vizualizar compras entre dos fechas", "ComprasEntreDosFechas", "Compra")</li>
                        <li>@Html.ActionLink("Visualizar clientes", "Index", "Usuario")</li>
                        <li>@Html.ActionLink("Estadisticas", "Estadisticas", "Excursion")</li>
                    </ul>
                </div>
            </div>
        </div>
        

    }
    @if ((string)Session["logueadoRol"] == "Cliente")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Agencia de viajes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Log Out", "LogOut", "Home")</li>
                        <li>@Html.ActionLink("Vizualizar excursiones", "Index", "Excursion")</li>
                        <li>@Html.ActionLink("Compras", "Index", "Compra")</li>
                    </ul>
                </div>
            </div>
        </div>


    }
    @if ((string)Session["logueadoRol"] == null)
    {
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Agencia de viajes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Log In", "Login", "Home")</li>
                    <li>@Html.ActionLink("Ver Excursiones", "Index", "Excursion")</li>
                    <li>@Html.ActionLink("Registrarse", "Registrarse", "Usuario")</li>
                  
                </ul>
            </div>
        </div>
    </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
